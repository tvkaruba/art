@page "/namespace-new"

@using Ects.Web.Repository.Pages.Components

@inherits SubjectNewBase

<style>
    .container {
        margin: auto;
        width: 70%;
        padding: 10px;
               }
</style>

<div class="container">
    <EditForm Model="@Subject" OnValidSubmit="AddSubject">
        <DataAnnotationsValidator />
        <div class="form-group">
            <label>Name</label>
            <InputText @bind-Value="Subject.Name" class="form-control" />
            <ValidationMessage For="@(() => Subject.Name)" />
        </div>
        <div class="form-group">
            <label>Description</label>
            <InputText @bind-Value="Subject.Description" class="form-control" />
            <ValidationMessage For="@(() => Subject.Description)" />
        </div>
        <div class="form-group">
            <label>Image Uri</label>
            <InputText @bind-Value="Image.Url" class="form-control" />
        </div>

        @if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <div class="alert alert-danger mt-3 mb-0">@ErrorMessage</div>
        }
    </EditForm>

    <ContentStorage />
    
    <button class="btn btn-primary" type="submit" @onclick="AddSubject">
        Create
    </button>
</div>