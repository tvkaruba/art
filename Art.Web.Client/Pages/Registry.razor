@page "/registry"

@inject IUserService UserService
@inject NavigationManager NavigationManager

<div class="col-md-6 offset-md-3 mt-5">
    <div class="card">
        <h4 class="card-header">Fill all lines to registry new user</h4>
        <div class="card-body">
            <EditForm Model="@_registrationForm" OnValidSubmit="HandleValidSubmit">
                <DataAnnotationsValidator />
                <div class="form-group">
                    <label>Email</label>
                    <InputText @bind-Value="_registrationForm.Email" class="form-control" />
                    <ValidationMessage For="@(() => _registrationForm.Email)" />
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <InputText @bind-Value="_registrationForm.Password" type="password" class="form-control" />
                    <ValidationMessage For="@(() => _registrationForm.Password)" />
                </div>
                <div class="form-group">
                    <label>First Name</label>
                    <InputText @bind-Value="_registrationForm.FirstName" class="form-control" />
                    <ValidationMessage For="@(() => _registrationForm.FirstName)" />
                </div>
                <div class="form-group">
                    <label>SecondName</label>
                    <InputText @bind-Value="_registrationForm.SecondName" type="form-control" class="form-control" />
                    <ValidationMessage For="@(() => _registrationForm.SecondName)" />
                </div>
                <div class="form-group">
                    <label>Choose task type</label>
                    <InputSelect @bind-Value="_registrationForm.Role" class="form-control">
                        <option value="@PersonRole.Administrator">Administrator</option>
                        <option value="@PersonRole.User">User</option>
                    </InputSelect>
                    <ValidationMessage For="@(() => _registrationForm.Role)" />
                </div>

                @if (!string.IsNullOrEmpty(_error))
                {
                    <div class="alert alert-danger mt-3 mb-0">@_error</div>
                }

                <button class="btn btn-primary" type="submit">
                    @if (_loading)
                    {
                        <span class="spinner-border spinner-border-sm mr-1"></span>
                    }
                    Registry
                </button>
                <button class="btn btn-primary" type="button" @onclick="CancelRegistry">Cancel</button>
            </EditForm>
        </div>
    </div>
</div>

@code
{
    private readonly RegistrationForm _registrationForm = new RegistrationForm();

    private bool _loading = false;

    private string _error = null;

    private async void HandleValidSubmit()
    {
        _loading = true;

        try
        {
            await UserService.Post(new PersonPost
            {
                Email = _registrationForm.Email,
                Password = _registrationForm.Password,
                FirstName = _registrationForm.FirstName,
                SecondName = _registrationForm.SecondName,
                PersonRoleId = _registrationForm.Role,
            });
            NavigationManager.NavigateTo("users");
        }
        catch (Exception ex)
        {
            _error = ex.Message;
            _loading = false;
            StateHasChanged();
        }
    }

    private void CancelRegistry()
    {
        NavigationManager.NavigateTo("users");
    }
}
